
<% include ../partials/header.ejs %>
<div class="container">
    <div class="row">
        <h1 class="text-center">Create a Comment for <%= campground.name %>!</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action = "/campground/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type = "text" name="comment[content]" placeholder="comments here">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit">
                </div>
            </form>
            <a href = "/campground/<%= campground._id %>">Send Me Back!</a>
        </div>
    </div>
</div>

