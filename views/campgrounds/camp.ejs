<% include ../partials/header.ejs %>

<div class = "container">
    
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <li class="list-group-item active">info1</li>
            <li class="list-group-item">info2</li>
            <li class="list-group-item">info3</li>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                
                <img class="img-responsive" src="<%= campground.image %>"> </img>
                <div class="caption-full" >
                    <h4 class="pull-right">$<%= campground.price %>/night</h4>
                    <h4>
                        <strong>
                        <%= campground.name %>
                        </strong>
                        
                    </h4>
                    <h3><em>Posted By <%= campground.author.username %></em></h3>
                    <% if(currentUser && campground.author.id.equals(currentUser._id)){ %> 
                    <a class="btn btn-warning" href="/campground/<%= campground._id %>/edit">Edit</a>
                    <form id="delete-form" action="/campground/<%= campground._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">delete</button>
                    </form>
                    <% } %>
                    <p> 
                        <%= campground.description %>
                    </p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/campground/<%= campground._id %>/comments/new">Add a Comment</a>
                </div>
                <% campground.comments.forEach(function(comment){ %>
                     <div class="row">
                         <div class="col-md-12">
                             <strong> <%= comment.author.username %>: </strong>
                             <span class="pull-right"> <%= comment.date %></span>
                             <p> <%= comment.content %></p>
                            <% if(currentUser && comment.author.id.equals(currentUser._id)){ %> 
                                <a class="btn btn-warning btn-xs" href="/campground/<%= campground._id %>/comments/<%= comment._id %>/edit">
                                    Edit
                                </a>
                                <form id="delete-form" action="/campground/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                    <button class="btn btn-danger btn-xs">delete</button>
                                </form>
                            <% } %>
                            
                         </div>
                     </div>
                     
                <% }) %>
            </div>
            <hr>
            <div class="well">
                <div class="row">
                    <div class="col-md-12" style="margin: 25px auto;">
                        <form action = "/campground/<%= campground._id %>/comments" method="POST">
                            <div class="form-group">
                                <textarea class="form-control" style="resize: none; height: 175px;" type = "text" name="comment[content]" maxlength=200 placeholder="leave a comment here"></textarea>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary btn-block" style="float: right; width: 10%;" >Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer.ejs %>