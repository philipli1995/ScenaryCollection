<% include ../partials/header.ejs %>



<div class = "container">
    <header class = "jumbotron">
        <div class="container">
            <h1>Scenary Collection</h1>
            <a href="/createcamp" class="btn btn-lg btn-primary">add a new scenary!</a>
        </div>
       
    </header>
    <div class="row text-center">
        <% campground.forEach(function(camp){ %>
            <div class="col-md-3 col-sm-6 ">
                <div class="thumbnail inner">
                    
                        <img alt="" src="<%= camp.image %>" class="img-thumbnail"> </img>

                    <div class="caption">
                        <h4><%= camp.name %> </h4>
                        <p style="height:60px;">
                        <% if(camp.description && camp.description.length > 100) { %>
                        <%= camp.description.substring(0,106) %>...
                        <% } else {%>
                        <%= camp.description %> 
                        <% } %>
                    </p>
                    <hr>
                    <a class="btn btn-primary" href = "/campground/<%= camp._id %>">More Info</a>
                    </div>
                    
                    
                </div>
            </div>
        <% }) %>
    </div>
    
    
</div>



<% include ../partials/footer.ejs %>